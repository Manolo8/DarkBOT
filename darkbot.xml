  <property name="project.jdk.home" value="${jdk.home.11}"/>
  <property name="project.jdk.bin" value="${jdk.bin.11}"/>
  <property name="project.jdk.classpath" value="jdk.classpath.11"/>
  
  
  <!-- Project Libraries -->
  
  <path id="library.darcula.classpath">
    <pathelement location="${basedir}/lib/darcula.jar"/>
  </path>
  
  <path id="library.maven:_com.bulenkov:darcula:1.0.0.classpath"/>
  
  <path id="library.maven:_com.google.code.gson:gson:2.8.5.classpath">
    <pathelement location="${path.variable.maven_repository}/com/google/code/gson/gson/2.8.5/gson-2.8.5.jar"/>
  </path>
  
  <path id="library.maven:_com.miglayout:miglayout:3.7.4.classpath">
    <pathelement location="${path.variable.maven_repository}/com/miglayout/miglayout/3.7.4/miglayout-3.7.4.jar"/>
  </path>
  
  <path id="library.maven:_net.java.dev.jna:jna-platform:5.2.0.classpath">
    <pathelement location="${path.variable.maven_repository}/net/java/dev/jna/jna-platform/5.2.0/jna-platform-5.2.0.jar"/>
  </path>
  
  <path id="library.maven:_net.java.dev.jna:jna:5.2.0.classpath">
    <pathelement location="${path.variable.maven_repository}/net/java/dev/jna/jna/5.2.0/jna-5.2.0.jar"/>
  </path>
  
  <path id="library.maven:_org.jgrapht:jgrapht-core:1.3.0.classpath">
    <pathelement location="${path.variable.maven_repository}/org/jgrapht/jgrapht-core/1.3.0/jgrapht-core-1.3.0.jar"/>
  </path>
  
  <path id="library.maven:_org.jheaps:jheaps:0.9.classpath">
    <pathelement location="${path.variable.maven_repository}/org/jheaps/jheaps/0.9/jheaps-0.9.jar"/>
  </path>
  <!-- Register Custom Compiler Taskdefs -->
  <property name="javac2.home" value="${idea.home}/lib"/>
  <path id="javac2.classpath">
    <fileset dir="${javac2.home}">
      <include name="javac2.jar"/>
      <include name="jdom.jar"/>
      <include name="asm-all*.jar"/>
      <include name="forms-*.jar"/>
    </fileset>
  </path>
  <target name="register.custom.compilers">
    <taskdef name="javac2" classname="com.intellij.ant.Javac2" classpathref="javac2.classpath"/>
    <taskdef name="instrumentIdeaExtensions" classname="com.intellij.ant.InstrumentIdeaExtensions" classpathref="javac2.classpath"/>
  </target>
  
  <!-- Modules -->
  
  <import file="${basedir}/module_darkbot.xml"/>
  
  <target name="init" description="Build initialization">
    <!-- Perform any build initialization in this target -->
  </target>
  
  <target name="clean" depends="clean.module.darkbot" description="cleanup all"/>
  
  <target name="build.modules" depends="init, clean, compile.module.darkbot" description="build all modules"/>
  
  <target name="init.artifacts">
    <property name="artifacts.temp.dir" value="${basedir}/__artifacts_temp"/>
    <property name="artifact.output.darkbot:jar" value="${basedir}/classes/artifacts/DarkBOT_jar"/>
    <mkdir dir="${artifacts.temp.dir}"/>
    <property name="temp.jar.path.DarkBOT.jar" value="${artifacts.temp.dir}/DarkBOT.jar"/>
  </target>
  
  <target name="artifact.darkbot:jar" depends="init.artifacts, compile.module.darkbot" description="Build &#39;DarkBOT:jar&#39; artifact">
    <property name="artifact.temp.output.darkbot:jar" value="${artifacts.temp.dir}/DarkBOT_jar"/>
    <mkdir dir="${artifact.temp.output.darkbot:jar}"/>
    <jar destfile="${temp.jar.path.DarkBOT.jar}" duplicate="preserve" filesetmanifest="mergewithoutmain">
      <zipfileset dir="${darkbot.output.dir}"/>
      <zipfileset src="${path.variable.maven_repository}/com/google/code/gson/gson/2.8.5/gson-2.8.5.jar"/>
      <zipfileset src="${basedir}/lib/darcula.jar"/>
    </jar>
    <copy file="${temp.jar.path.DarkBOT.jar}" tofile="${artifact.temp.output.darkbot:jar}/DarkBOT.jar"/>
  </target>
  
  <target name="build.all.artifacts" depends="artifact.darkbot:jar" description="Build all artifacts">
    <mkdir dir="${artifact.output.darkbot:jar}"/>
    <copy todir="${artifact.output.darkbot:jar}">
      <fileset dir="${artifact.temp.output.darkbot:jar}"/>
    </copy>
    
    <!-- Delete temporary files -->
    <delete dir="${artifacts.temp.dir}"/>
  </target>
  
  <target name="all" depends="build.modules, build.all.artifacts" description="build all"/>
</project>